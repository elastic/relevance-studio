{
  "_meta": {
    "description": "Elasticsearch Relevance Studio - Scenarios",
    "version": "1.1.0"
  },
  "index_patterns": [
    "esrs-scenarios*"
  ],
  "template": {
    "mappings": {
      "dynamic": "true",
      "properties": {
        "@meta": {
          "properties": {
            "created_at": {
              "type": "date"
            },
            "created_by": {
              "type": "keyword"
            },
            "updated_at": {
              "type": "date"
            },
            "updated_by": {
              "type": "keyword"
            }
          }
        },
        "workspace_id": {
          "type": "keyword"
        },
        "name": {
          "type": "keyword"
        },
        "params": {
          "type": "keyword"
        },
        "tags": {
          "type": "keyword"
        },
        "values": {
          "type": "object",
          "enabled": false
        },
        "_search": {
          "properties": {
            "name": {
              "type": "text"
            },
            "params": {
              "type": "text"
            },
            "tags": {
              "type": "text"
            },
            "values": {
              "type": "text"
            }
          }
        }
      }
    }
  }
}
{
  "_meta": {
    "description": "Elasticsearch Relevance Studio - Evaluations"
  },
  "index_patterns": [
    "esrs-evaluations*"
  ],
  "template": {
    "settings": {
      "index": {
        "sort.field": "@meta.created_at",
        "sort.order": "desc"
      }
    },
    "mappings": {
      "dynamic": "strict",
      "properties": {
        "@meta": {
          "properties": {
            "status": {
              "type": "keyword"
            },
            "created_at": {
              "type": "date"
            },
            "created_by": {
              "type": "keyword"
            },
            "started_at": {
              "type": "date"
            },
            "started_by": {
              "type": "keyword"
            },
            "stopped_at": {
              "type": "date"
            }
          }
        },
        "project_id": {
          "type": "keyword"
        },
        "benchmark_id": {
          "type": "keyword"
        },
        "scenario_id": {
          "type": "keyword"
        },
        "strategy_id": {
          "type": "keyword"
        },
        "summary": {
          "type": "object",
          "enabled": false
        },
        "task": {
          "properties": {
            "metrics": {
              "type": "keyword"
            },
            "k": {
              "type": "short"
            },
            "strategies": {
              "properties": {
                "_ids": {
                  "type": "keyword"
                },
                "tags": {
                  "type": "keyword"
                },
                "docs": {
                  "type": "object",
                  "enabled": false
                }
              }
            },
            "scenarios": {
              "properties": {
                "_ids": {
                  "type": "keyword"
                },
                "tags": {
                  "type": "keyword"
                },
                "sample_size": {
                  "type": "integer"
                },
                "sample_seed": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "results": {
          "properties": {
            "strategy_id": {
              "type": "keyword"
            },
            "searches": {
              "properties": {
                "scenario_id": {
                  "type": "keyword"
                },
                "metrics": {
                  "properties": {
                    "dcg": {
                      "type": "float"
                    },
                    "err": {
                      "type": "float"
                    },
                    "mrr": {
                      "type": "float"
                    },
                    "ndcg": {
                      "type": "float"
                    },
                    "precision": {
                      "type": "float"
                    },
                    "recall": {
                      "type": "float"
                    }
                  }
                },
                "hits": {
                  "properties": {
                    "hit": {
                      "properties": {
                        "_id": {
                          "type": "keyword"
                        },
                        "_index": {
                          "type": "keyword"
                        },
                        "_score": {
                          "type": "float"
                        },
                        "_ignored": {
                          "type": "keyword"
                        }
                      }
                    },
                    "rating": {
                      "type": "byte"
                    }
                  }
                }
              }
            }
          }
        },
        "runtime": {
          "properties": {
            "indices": {
              "type": "object",
              "enabled": false
            },
            "scenarios": {
              "type": "object",
              "enabled": false
            },
            "strategies": {
              "type": "object",
              "enabled": false
            },
            "judgements": {
              "type": "object",
              "enabled": false
            }
          }
        },
        "unrated_docs": {
          "properties": {
            "_id": {
              "type": "keyword"
            },
            "_index": {
              "type": "keyword"
            },
            "count": {
              "type": "integer"
            },
            "strategies": {
              "type": "keyword"
            },
            "scenarios": {
              "type": "keyword"
            }
          }
        },
        "took": {
          "type": "integer"
        }
      }
    }
  }
}
{
  "_meta": {
    "description": "Elasticsearch Relevance Studio - Displays"
  },
  "index_patterns": [
    "esrs-displays*"
  ],
  "template": {
    "mappings": {
      "dynamic": "strict",
      "properties": {
        "@meta": {
          "properties": {
            "created_at": {
              "type": "date"
            },
            "created_by": {
              "type": "keyword"
            },
            "updated_at": {
              "type": "date"
            },
            "updated_by": {
              "type": "keyword"
            }
          }
        },
        "workspace_id": {
          "type": "keyword"
        },
        "index_pattern": {
          "type": "keyword"
        },
        "fields": {
          "type": "keyword"
        },
        "template": {
          "properties": {
            "body": {
              "type": "text",
              "index": false
            },
            "image": {
              "properties": {
                "position": {
                  "type": "keyword"
                },
                "url": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "_search": {
          "properties": {
            "index_pattern": {
              "type": "text"
            },
            "fields": {
              "type": "text"
            },
            "template": {
              "properties": {
                "body": {
                  "type": "text"
                },
                "image": {
                  "properties": {
                    "position": {
                      "type": "text"
                    },
                    "url": {
                      "type": "text"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
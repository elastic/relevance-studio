{
  "_meta": {
    "description": "Elasticsearch Relevance Studio - Benchmarks"
  },
  "index_patterns": [
    "esrs-benchmarks*"
  ],
  "template": {
    "mappings": {
      "dynamic": "true",
      "properties": {
        "@meta": {
          "properties": {
            "created_at": {
              "type": "date"
            },
            "created_by": {
              "type": "keyword"
            },
            "updated_at": {
              "type": "date"
            },
            "updated_by": {
              "type": "keyword"
            }
          }
        },
        "workspace_id": {
          "type": "keyword"
        },
        "name": {
          "type": "keyword"
        },
        "description": {
          "type": "text"
        },
        "tags": {
          "type": "keyword"
        },
        "scenario_id": {
          "type": "keyword"
        },
        "strategy_id": {
          "type": "keyword"
        },
        "task": {
          "properties": {
            "metrics": {
              "type": "keyword"
            },
            "k": {
              "type": "short"
            },
            "strategies": {
              "properties": {
                "_ids": {
                  "type": "keyword"
                },
                "tags": {
                  "type": "keyword"
                },
                "docs": {
                  "type": "object",
                  "enabled": false
                }
              }
            },
            "scenarios": {
              "properties": {
                "_ids": {
                  "type": "keyword"
                },
                "tags": {
                  "type": "keyword"
                },
                "sample_size": {
                  "type": "integer"
                },
                "sample_seed": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "_search": {
          "properties": {
            "name": {
              "type": "text"
            },
            "description": {
              "type": "text"
            },
            "tags": {
              "type": "text"
            },
            "task": {
              "properties": {
                "metrics": {
                  "type": "text"
                },
                "strategies": {
                  "properties": {
                    "tags": {
                      "type": "text"
                    }
                  }
                },
                "scenarios": {
                  "properties": {
                    "tags": {
                      "type": "text"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}